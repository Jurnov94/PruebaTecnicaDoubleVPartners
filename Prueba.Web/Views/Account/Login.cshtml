@model Prueba.Shared.DTOs.UsuarioDTO


@{
    ViewData["Title"] = "Login";
}
@if (TempData["ErrorMensaje"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMensaje"]
    </div>
}

<div class="row">
    <div class="col-md-4 offset-4">
        <div class="card bg-primary mb-3" style="width: 450px; height: 450px">
            <h5 class="card-header text-center text-white">Iniciar Sesión</h5>
            <div class="card-body bg-warning">
                <h3>Iniciar Sesión</h3>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <div class="form-group">
                        <label asp-for="NombreUsuario" class="control-label"></label>
                        <input asp-for="NombreUsuario" class="form-control" />
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <button input type="submit" value="Iniciar Sesión" class="btn btn-primary btn-block"><i class="fa-solid fa-user"></i> Iniciar Sesión</button>
                        <a asp-controller="Usuarios" asp-action="Create" class="btn btn-secondary"><i class="fa-solid fa-circle-plus"></i> Registrar Nuevo Usuario</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
