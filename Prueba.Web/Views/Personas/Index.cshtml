@model IEnumerable<Prueba.Shared.DTOs.PersonaDTO>

@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-11 g-2">
        <h3>Personas</h3>
    </div>
    <div class="col-1">
        <a class="btn btn-primary btn-flex h-40px border-0 fw-bolder px-4 px-lg-6" asp-action="Create">Nuevo</a>
    </div>
</div>

<div class="table-responsive" id="UsuariosTable">
    <table id="MyTable" class="table table-striped table-row-bordered gy-5 gs-7">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombres)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Apellidos)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.TipoIdentificacion)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.NumeroIdentificacion)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.NombreCompleto)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.IdentificacionCompleta)
                </th>                

                <th>
                    @Html.DisplayNameFor(model => model.FechaCreacion)
                </th>

                <th style="width: 22%;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombres)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoIdentificacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroIdentificacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdentificacionCompleta)
                    </td>
                   

                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCreacion)
                    </td>

                    <td>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


    <script type="text/javascript">
        $(document).ready(function () {
            $('#UsuariosTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>


}